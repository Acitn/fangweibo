  background: #fff;
}
.tab {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  white-space: nowrap;
}
.tab__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 0 20rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
}
.tab__item.active {
  color: #f98621;
}
.scroll-view_H {
  /* 文本不会换行，文本会在在同一行上继续，直到遇到 <br> 标签为止。 */
  white-space: nowrap;
  width: calc(100vw - 80rpx);
  border-right: 1rpx solid #e6e6e6;
}
